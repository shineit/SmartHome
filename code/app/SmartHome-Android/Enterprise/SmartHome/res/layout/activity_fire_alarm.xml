<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/misp_tilte_with_save_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/alarm_btn_area" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/item_imgbg_src"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/fire_alarm_top" />

                <ImageView
                    android:id="@+id/fire_alarm_safemsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/safemsg"
                    android:visibility="gone" />

                <cn.fuego.misp.ui.base.MispListViewAdaptScroll
                    android:id="@+id/fire_alarm_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/backcolor"
                    android:dividerHeight="1dp" >
                </cn.fuego.misp.ui.base.MispListViewAdaptScroll>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/alarm_btn_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical" >

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/themecolor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:padding="10dp" >

                <Button
                    android:id="@+id/fire_alarm_mute_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/alarmlist"
                    android:background="@drawable/common_btn"
                    android:text="消  音"
                    android:textColor="@color/white"
                    android:textSize="@dimen/content_font_size" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>